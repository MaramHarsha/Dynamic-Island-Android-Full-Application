<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/divider_line" android:background="@color/transparentFullWhite" android:layout_width="match_parent" android:layout_height="10dp"/>
    <RelativeLayout android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/arrow_iv" android:padding="@dimen/normal_margin" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/arrow_down" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginEnd="5dp"/>
        <TextView android:textSize="15sp" android:textColor="@color/on_text" android:id="@+id/tv_app_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/medium_margin" android:layout_marginBottom="@dimen/medium_margin" android:text="@string/test_text" android:maxLines="1" android:singleLine="true" android:layout_marginStart="@dimen/medium_margin" android:layout_marginEnd="@dimen/medium_margin" android:layout_toStartOf="@+id/civ_senderIcon"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/on_text" android:id="@+id/tv_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/medium_margin" android:layout_marginBottom="@dimen/medium_margin" android:text="@string/test_text" android:maxLines="1" android:singleLine="true" android:layout_below="@+id/tv_app_title" android:layout_marginStart="@dimen/medium_margin" android:layout_marginEnd="@dimen/medium_margin" android:layout_toStartOf="@+id/civ_senderIcon" android:layout_alignParentStart="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/on_text" android:id="@+id/sub_tv_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/medium_margin" android:layout_marginBottom="@dimen/medium_margin" android:text="@string/test_text" android:maxLines="1" android:layout_below="@+id/tv_text" android:layout_marginStart="@dimen/medium_margin" android:layout_marginEnd="@dimen/medium_margin" android:layout_alignParentStart="true"/>
        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/civ_senderIcon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="25dp" android:src="@drawable/profile_icon" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/notification_picture" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" android:layout_below="@+id/sub_tv_text"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/notification_top_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/notification_picture">
            <RelativeLayout android:orientation="vertical" android:id="@+id/notification_material_reply_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <EditText android:textSize="15sp" android:textColor="@color/on_text" android:textColorHint="@color/gray_transparent" android:id="@+id/ed_reply" android:background="@drawable/reply_bg" android:padding="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="@string/reply" android:singleLine="true" android:imeOptions="actionSend"/>
                <ImageView android:id="@+id/iv_send_reply" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/send_reply_iv" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true" app:tint="@color/blue_400"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/notification_action_container" android:paddingTop="10dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
